kind: pipeline   
type: kubernetes  
name: default    

clone:
  depth: 1

steps:
- name: scp files
  image: appleboy/drone-scp
  settings:
    host: 10.0.7.30
    username: root
    password: 123
    port: 22
    target: /tmp
    source: main.go

- name: ssh
  image: appleboy/drone-ssh
  settings:
    host:
      - 10.0.7.30
    username: root
    password: 123
    port: 22
    command_timeout: 2m
    script:
      - ls -ls /tmp
      - hostname

