kind: pipeline   
type: kubernetes  
name: default    

clone:
  depth: 1

steps:
- name: step1  
  pull: if-not-exsits
  image: alpine:3.16
  volumes: 
  - name: shared
    path: /shared  
  commands:
  - |
    cd /shared
    touch drone-cache.txt
    pwd
    ls -la 

volumes:
- name: shared
  claim:
    name: drone-cache-pvc
    read_only: false